@require '../../config.styl'

.root
  display block
  height 0
  width 100%

  position relative
  padding-bottom 100%

  background linear-gradient(to bottom right, color-secondary 0%, color-secondary-dark 100%)
  border-radius border-radius-default
  box-shadow 1px 1px 2px makeblack(.3)

.content
  display flex
  flex-direction column

  position absolute
  top 0
  bottom 0
  right 0
  left 0

  color color-page-background

.header
  margin-bottom auto
  text-align center

  padding (gutter/2)

.name
  margin 0

  font-size font-size-smaller
  text-transform uppercase
  letter-spacing .3px
  font-weight bold

.value
  text-align center
  font-size font-size-xl
  font-weight bold

  height 100%
  display flex
  align-items center
  justify-content center
  margin-top negative(gutter)

.front
  display block

.back
  display none