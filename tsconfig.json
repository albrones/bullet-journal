{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    ".meteor",
    "wwwroot",
    "packages",
    "typings"
  ]
}