@import '../../config.styl'

.page
  height 100vh
  width 100vw

  fullscreen()

  background-image: url('/images/iphone_notes-min.jpg')

  background-size cover
  
  &:after
    content ''
    fullscreen()

    background-color rgba(shade(color-secondary-dark, 70%), .15)
    z-index -1

.container
  position relative
  z-index 10

  width 100%
  height 100%

  display flex
  justify-content center
  align-items center

.prompt, .actions
  width 50%
  margin 0
  padding rem(base-unit)


.prompt
  color color-page-background
  font-size rem(60px)
  text-align right
  line-height 1

  small
    display block
    font-size 0.5em

.actions
  text-align left

