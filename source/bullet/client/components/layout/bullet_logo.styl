@require '../../config.styl'

.dot
  display inline-block
  width 0.2em
  height 0.2em
  border-radius 50%

  background-color color-primary
  overflow hidden
  text-indent -999px

  transition: margin-bottom 0.3s ease-out
  
.logoLarge, .logoSmall
  font-family font-family-logo
  font-weight normal
  line-height 1
  color color-primary
  text-decoration none

  transition: font-size 0.3s ease-out

.logoLarge
  font-size rem(60px)
  color white

  .dot
    width 0.15em
    height 0.15em
    margin-right -6px
    margin-bottom -3px
    color white

.logoSmall
  font-size rem(32px)

  .dot
    margin-right -3px
    margin-bottom -2px